{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "nixpacks",
        "buildCommand": "yarn --cwd client install && NODE_OPTIONS=--openssl-legacy-provider CI=false yarn --cwd client build"
    },
    "deploy": {
        "startCommand": "yarn start",
        "healthcheckPath": "/api/serverhealth",
        "healthcheckTimeout": 100,
        "restartPolicyType": "never"
    }
}
